    background-size: cover;
}
#container{
    background-color: rgba(236, 232, 219, 0.808);
    /* centralizar um bloco preciso de widht e margin */

    /* Definindo largura e
    margem automática, o resultado
    é a centralização da caixa */
    width: 80%;
    margin: auto;

    /* limitando largura maxima*/
    max-width: 1200px;

    /* limitando a largura minima */
    min-width: 600px;

    padding: 20px;
    border-radius: 10px;
    /* horizontal(X) vertical(Y) blur cor */
    box-shadow: 5px 5px 50px rgb(15, 187, 130);
}

img{
    /* Torna imagem flexivel/responsivo */
    max-width: 100%;
}

h1{
    background: linear-gradient(45deg,teal,rgb(115, 141, 226));
    font-family: 'Rubik Iso', cursive;
    text-align: center;
