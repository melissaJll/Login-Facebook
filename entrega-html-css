/*Etapa 1: regra de animação*/
@keyframes animaCores {
    from{
        background-color:cornflowerblue;
        color: plum
    }
    to{
        background-color: plum;
        color: cornflowerblue
    }
}
/* etapa 2: aplicar alguns elementos */
.subtitulo, h3 {
    animation-name: animaCores;
    animation-duration: 4s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}


#banner{
    width: 450px;
    margin: auto;
    border: solid 2px;
    overflow: hidden;
}

@keyframes animaBanner{
    from{
        transform: translate(-120px);
    }
    to{
        transform: translate(440px) rotate(360deg);
    }
}

#banner img{
    /* border: solid 2px red; */
    animation-name: animaBanner;
    animation-duration: 3s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
    animation-timing-function: ease-in;
}


@keyframes expande{
    from{
        transform: scale(1.0);
        background-color: rgba(86, 101, 131, 0.404);
    }
    to{
        transform: scale(1.8);
        background-color: rgba(72, 127, 228, 0.637);
    }
}

aside{ /*ou id -> banner*/
    position: relative;
} 
/* Referencia para absolute */

#banner p{
    will-change: transform;
    position: absolute; /*deixa solta para posicionamento*/
    
    width: 100%;
    
    padding-top: 8px;
    padding-bottom: 8px;
    text-align: center;

    bottom: 40px;

    font-family: 'Climate Crisis', cursive;
    color: antiquewhite;
    text-shadow: rgb(54, 54, 54) 1px 1px 1px;

    animation-name: expande;
    animation-duration: 2s;
    animation-iteration-count: infinite;
    animation-direction: alternate; 
}


